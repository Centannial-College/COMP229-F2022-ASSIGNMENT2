<div class="container-fluid" style="background-color: #8938F7; height: 100%">  
    <div class="position-absolute top-50 start-50 translate-middle bg-light p-5 w-75">
        <h3 class="text-center">Business Contacts List</h3>
        <hr>
        <!-- Table with values from database -->
        <table class="table table-striped table-hover">
            <thead class="table-striped">
                <tr>
                    <th scope="col" class="text-center ">#</th>
                    <th scope="col" class="text-center">Contact Name</th>
                    <th scope="col" class="text-center">Contact Number</th>
                    <th scope="col" class="text-center">Email Address</th>
                    <% if(displayName) { %>
                        <th></th>
                        <th></th>
                    <% } %> 
                </tr>
            </thead>
            <tbody id="contactList">
                 <% for(let count = 0; count < contacts.length; count++) { %>
                     <tr>
                         <th scope="row" class="text-center"><%= count + 1 %></th>
                         <td class="text-center"><%= contacts[count].name %></td>
                         <td class="text-center">+1<%= contacts[count].number %></td>
                         <td class="text-center"><%= contacts[count].email %></td>
                         <% if(displayName) { %>
                         <td class="text-center col-1">
                             <a href="/contacts-edit/<%= contacts[count]._id %>"
                                 class="btn btn-outline-dark btn-sm">
                                 <i class="fas fa-pencil-alt"></i> Edit</a>
                         </td>                      
                         <td class="text-center col-1">
                             <a href="/contacts-delete/<%= contacts[count]._id %>"
                                 class="btn btn-outline-danger btn-sm">
                                 <i class="fas fa-trash-alt"></i> Delete</a>
                         </td>
                         <% } %> 
                     </tr>
                 <% } %>
             </tbody>
        </table>
        <% if(displayName) { %>
            <a href="/contacts-add" class="btn btn-outline-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contact</a>
        <% } %>
    </div>
</div>





